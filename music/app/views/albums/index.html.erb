<h1>Albums</h1>

<%= link_to 'New Album', new_album_path %>

<table>
  <tr>
  	<th>Title</th>
  	<th>Artist</th>
  	<th>Year</th>
  	<th colspan="2"></th>
  </tr>

  <% @albums.each do |album| %>
    <tr>
      <td><%= album.title %></td>
      <td><%= album.artist %></td>
      <td><%= album.year %></td>
    </tr>
  <% end %>
</table>